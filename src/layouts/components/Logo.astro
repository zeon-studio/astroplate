---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

const { src, srcDarkmode }: { src?: string; srcDarkmode?: string } =
  Astro.props;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const { theme_switcher }: { theme_switcher: boolean } = config.settings;

// --- 关键修正 1: 确保 logo 路径有效且包含 /public 前缀 ---
let primaryLogoPath = src || logo;
let primaryLogoSrc = primaryLogoPath && !primaryLogoPath.startsWith('http') && !primaryLogoPath.startsWith('/public') 
                     ? `/public${primaryLogoPath}` 
                     : primaryLogoPath;

// --- 关键修正 2: 确保深色模式 logo 路径有效且包含 /public 前缀 ---
let darkmodeLogoPath = srcDarkmode || logo_darkmode;
let darkmodeLogoSrc = darkmodeLogoPath && !darkmodeLogoPath.startsWith('http') && !darkmodeLogoPath.startsWith('/public')
                      ? `/public${darkmodeLogoPath}`
                      : darkmodeLogoPath;

// --- 关键修正 3: 确保 width 和 height 是数字或有效的 CSS 值 ---
const logoW = parseInt(logo_width.replace("px", "")) || 100;
const logoH = parseInt(logo_height.replace("px", "")) || 30;
---

<a href="/" class="navbar-brand inline-block">
  {
    // 检查是否有任何图片源 (primaryLogoSrc 或 darkmodeLogoSrc)
    (primaryLogoSrc || darkmodeLogoSrc) ? (
      <>
        {/* 常规模式 Logo (仅在 primaryLogoSrc 有效时渲染) */}
        {primaryLogoSrc && (
          <ImageMod
            src={primaryLogoSrc} 
            class={`inline-block ${theme_switcher && "dark:hidden"}`}
            width={logoW * 2}
            height={logoH * 2}
            alt={title}
            style={{
              height: logoH + "px",
              width: logoW + "px",
            }}
            format="webp"
          />
        )}
        
        {/* 深色模式 Logo (仅在 theme_switcher 开启且 darkmodeLogoSrc 有效时渲染) */}
        {theme_switcher && darkmodeLogoSrc && (
          <ImageMod
            src={darkmodeLogoSrc} 
            class={"hidden dark:inline-block"}
            width={logoW * 2}
            height={logoH * 2}
            alt={title}
            style={{
              height: logoH + "px",
              width: logoW + "px",
            }}
            format="webp"
          />
        )}
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
