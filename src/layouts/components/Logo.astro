---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

const { src, srcDarkmode }: { src?: string; srcDarkmode?: string } =
  Astro.props;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const { theme_switcher }: { theme_switcher: boolean } = config.settings;

// --- 关键修正 1: 确保 logo 路径包含 /public 前缀 ---
let primaryLogoSrc = src ? src : logo;
if (primaryLogoSrc && !primaryLogoSrc.startsWith('http') && !primaryLogoSrc.startsWith('/public')) {
  primaryLogoSrc = `/public${primaryLogoSrc}`;
}

// --- 关键修正 2: 确保深色模式 logo 路径包含 /public 前缀 ---
let darkmodeLogoSrc = srcDarkmode ? srcDarkmode : logo_darkmode;
if (darkmodeLogoSrc && !darkmodeLogoSrc.startsWith('http') && !darkmodeLogoSrc.startsWith('/public')) {
  darkmodeLogoSrc = `/public${darkmodeLogoSrc}`;
}
// ----------------------------------------------------
---

<a href="/" class="navbar-brand inline-block">
  {
    primaryLogoSrc || darkmodeLogoSrc || logo_text ? ( // 检查修正后的 src 变量
      <>
        {/* 常规模式 Logo */}
        <ImageMod
          src={primaryLogoSrc} // 使用修正后的变量
          class={`inline-block ${theme_switcher && "dark:hidden"}`}
          width={logo_width.replace("px", "") * 2}
          height={logo_height.replace("px", "") * 2}
          alt={title}
          style={{
            height: logo_height.replace("px", "") + "px",
            width: logo_width.replace("px", "") + "px",
          }}
          format="webp"
        />
        {/* 深色模式 Logo */}
        {theme_switcher && (
          <ImageMod
            src={darkmodeLogoSrc} // 使用修正后的变量
            class={"hidden dark:inline-block"}
            width={logo_width.replace("px", "") * 2}
            height={logo_height.replace("px", "") * 2}
            alt={title}
            style={{
              height: logo_height.replace("px", "") + "px",
              width: logo_width.replace("px", "") + "px",
            }}
            format="webp"
          />
        )}
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
