---
import config from "@/config/config.json";
// 确保 ImageMod 组件存在且能被正确导入
import ImageMod from "./ImageMod.astro"; 

const { src, srcDarkmode }: { src?: string; srcDarkmode?: string } =
  Astro.props;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const { theme_switcher }: { theme_switcher: boolean } = config.settings;

// 1. 获取主 logo 路径，并确保路径有效且有 /public 前缀
let primaryLogoPath = src || logo;
let primaryLogoSrc = primaryLogoPath && String(primaryLogoPath).trim() !== ''
                     ? (!primaryLogoPath.startsWith('http') && !primaryLogoPath.startsWith('/public') 
                        ? `/public${primaryLogoPath}` 
                        : primaryLogoPath)
                     : null; // 路径无效时强制设置为 null

// 2. 获取深色模式 logo 路径，并确保路径有效且有 /public 前缀
let darkmodeLogoPath = srcDarkmode || logo_darkmode;
let darkmodeLogoSrc = darkmodeLogoPath && String(darkmodeLogoPath).trim() !== ''
                      ? (!darkmodeLogoPath.startsWith('http') && !darkmodeLogoPath.startsWith('/public')
                         ? `/public${darkmodeLogoPath}`
                         : darkmodeLogoPath)
                      : null; // 路径无效时强制设置为 null

// 3. 安全解析 logo 尺寸
// 注意：config.json 中 width/height 是字符串 "150" / "30"，这里必须解析
const logoW = parseInt(String(logo_width).replace("px", "")) || 100;
const logoH = parseInt(String(logo_height).replace("px", "")) || 30;
---

<a href="/" class="navbar-brand inline-block">
  {
    // 只有 primaryLogoSrc 或 darkmodeLogoSrc 存在且非空时，才渲染图片元素
    (primaryLogoSrc || darkmodeLogoSrc) ? (
      <>
        {/* 常规模式 Logo (仅在 primaryLogoSrc 有效时渲染) */}
        {primaryLogoSrc && (
          <ImageMod
            src={primaryLogoSrc} 
            class={`inline-block ${theme_switcher && "dark:hidden"}`}
            width={logoW * 2}
            height={logoH * 2}
            alt={title}
            style={{
              height: logoH + "px",
              width: logoW + "px",
            }}
            format="webp"
          />
        )}
        
        {/* 深色模式 Logo (仅在 theme_switcher 开启且 darkmodeLogoSrc 有效时渲染) */}
        {theme_switcher && darkmodeLogoSrc && (
          <ImageMod
            src={darkmodeLogoSrc} 
            class={"hidden dark:inline-block"}
            width={logoW * 2}
            height={logoH * 2}
            alt={title}
            style={{
              height: logoH + "px",
              width: logoW + "px",
            }}
            format="webp"
          />
        )}
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
