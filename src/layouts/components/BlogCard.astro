---
import config from "@/config/config.json";
import dateFormat from "@/lib/utils/dateFormat";
import { humanize, plainify, slugify } from "@/lib/utils/textConverter";
import { FaRegFolder, FaRegUserCircle } from "react-icons/fa";

const {
  summary_length,
  blog_folder,
}: { summary_length: number; blog_folder: string } = config.settings;
const { data } = Astro.props;
const { title, image, date, author, categories } = data.data;
---

<div class="bg-body dark:bg-darkmode-body">
  {
    image && (
      <!-- 使用 object-cover 填充容器，移除白边 -->
      <div class="mb-6 overflow-hidden rounded-lg bg-transparent">  <!-- 移除背景色 -->
        <img
          src={image}
          alt={title}
          class="w-full h-48 object-cover transition-transform duration-500 hover:scale-105"
          loading="lazy"
          decoding="async"
          style="display: block;"
        />
      </div>
    )
  }
  <h4 class="mb-3">
    <a href={`/${blog_folder}/${data.id}`} class="hover:text-primary transition-colors text-lg font-semibold">
      {title}
    </a>
  </h4>
  <ul class="mb-4">
    <li class="mr-4 inline-block">
      <a href={`/authors/${slugify(author)}`} class="flex items-center text-text hover:text-primary text-base">  <!-- 恢复字号 -->
        <FaRegUserCircle className={"mr-2 -mt-1 inline-block"} />
        {humanize(author)}
      </a>
    </li>
    {
      categories && categories.length > 0 && (
        <li class="mr-4 inline-block">
          <div class="flex items-center text-text text-base">  <!-- 恢复字号 -->
            <FaRegFolder className={"mr-2 -mt-1 inline-block"} />
            {
              categories.map((category: string, index: number) => (
                <a href={`/categories/${slugify(category)}`} class="hover:text-primary">
                  {humanize(category)}
                  {index !== categories.length - 1 && ","}
                </a>
              ))
            }
          </div>
        </li>
      )
    }
    {date && <li class="inline-block text-text text-base">{dateFormat(date)}</li>}  <!-- 恢复字号 -->
  </ul>
  <p class="mb-6 text-text text-base leading-relaxed">{plainify(data.body?.slice(0, Number(summary_length)))}</p>  <!-- 恢复字号 -->
  <a class="btn btn-outline-primary btn-sm" href={`/${blog_folder}/${data.id}`}>
    浏览更多
  </a>
</div>

<style>
  /* 确保图片在各种比例下都能良好显示 */
  .bg-body img {
    max-width: 100%;
    height: auto;
  }
  
  /* 平滑的悬停效果 */
  .bg-body div:first-child {
    transition: all 0.3s ease;
  }
  
  .bg-body div:first-child:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>