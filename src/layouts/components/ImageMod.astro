---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt?: string;
  width?: number; // ä¿æŒå¯é€‰
  height?: number; // ä¿æŒå¯é€‰
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
  [key: string]: any;
}

let {
  src,
  alt,
  width,
  height,
  loading,
  decoding,
  format,
  style,
  class: className,
  ...rest
} = Astro.props;

const isRemoteImage = src.startsWith("http://") || src.startsWith("https://") || src.startsWith("//");

let imageModule = null;

if (!isRemoteImage) {
  // æ”¯æŒå¤šç§å›¾ç‰‡è·¯å¾„
  const images = import.meta.glob([
    "/public/images/**/*.{jpeg,jpg,png,avif,tiff,gif,webp,svg}",
    "/public/**/*.{jpeg,jpg,png,avif,tiff,gif,webp,svg}",
  ]);

  let searchPath = src;
  if (!searchPath.startsWith('/')) {
    searchPath = `/${searchPath}`;
  }
  if (!searchPath.startsWith('/public/')) {
    searchPath = `/public${searchPath}`;
  }

  const key = Object.keys(images).find((k) => k.includes(searchPath));
  
  if (key) {
    imageModule = await images[key]();
    imageModule = imageModule.default;
  }
}

const isValidPath = isRemoteImage ? true : imageModule !== null;

// ğŸŒŸ æ ¸å¿ƒä¿®å¤ï¼šç¡®ä¿åªæœ‰å½“ width/height æ˜ç¡®ä¼ å…¥æ—¶ï¼Œæ‰ä¿æŒå…¶å€¼ã€‚
// å¦åˆ™ï¼Œè®¾ç½®ä¸º undefinedï¼Œè¿™æ · Astro/HTMLå°±ä¸ä¼šæ¸²æŸ“ width/height å±æ€§ã€‚
const finalWidth = (typeof width === 'number' && width > 0) ? width : undefined;
const finalHeight = (typeof height === 'number' && height > 0) ? height : undefined;

// å¯¹äºè‡ªé€‚åº”å›¾ç‰‡ï¼Œæˆ‘ä»¬åªä¼ é€’ CSS (className)ï¼Œä¸ä¼ é€’å°ºå¯¸ã€‚
const isContained = className && (className.includes('object-cover') || className.includes('object-fill') || className.includes('w-full') || className.includes('h-full'));

// åªæœ‰åœ¨å›¾ç‰‡ä¸æ˜¯è‡ªé€‚åº”å®¹å™¨çš„ä¸€éƒ¨åˆ†æ—¶ï¼Œæ‰ä¼ é€’å°ºå¯¸
const passWidth = isContained ? undefined : finalWidth;
const passHeight = isContained ? undefined : finalHeight;
---

{
  isValidPath ? (
    isRemoteImage ? (
      <img
        src={src}
        alt={alt || ""}
        width={passWidth}
        height={passHeight}
        loading={loading}
        decoding={decoding}
        class={className}
        style={style}
        {...rest}
      />
    ) : (
      <Image
        src={imageModule}
        alt={alt || ""}
        width={passWidth}
        height={passHeight}
        loading={loading}
        decoding={decoding}
        format={format}
        class={className}
        style={style}
        {...rest}
      />
    )
  ) : (
    <div class={`bg-gray-200 dark:bg-gray-700 flex items-center justify-center ${className}`} style={style}>
      <span class="text-gray-500 text-sm">å›¾ç‰‡åŠ è½½å¤±è´¥</span>
    </div>
  )
}
