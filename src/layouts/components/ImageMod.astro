import { Image } from "astro:assets";

interface Props {
  src: string;
  alt?: string;
  width?: number;
  height?: number;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
  [key: string]: any;
}

let {
  src,
  alt,
  width,
  height,
  loading,
  decoding,
  format,
  style,
  class: className,
  ...rest
