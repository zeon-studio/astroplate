const finalWidth = width ? width : undefined;
const finalHeight = height ? height : undefined;

// æ£€æŸ¥æ˜¯å¦åœ¨è‡ªé€‚åº”å®¹å™¨å†… (å³ BlogCard ä¼ å…¥äº† object-cover)
const isContained = className && (className.includes('object-cover') || className.includes('object-fill'));
