---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string; 
  alt: string;
  width?: number; 
  height?: number; 
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
}

let { src, alt, width, height, loading, decoding, class: className, format, style } = Astro.props;

const isRemote = src.startsWith('http://') || src.startsWith('https://');

let isValidPath = false;
let imageMetadata: ImageMetadata | undefined;

// --- 【本地图片修复区域】 ---
if (!isRemote) {
  // 关键 1: 使用 eager: true 立即加载元数据
  const images = import.meta.glob<ImageMetadata>("/public/images/**/*.{jpeg,jpg,png,gif,svg,webp}", { 
    eager: true 
  });
  
  // 关键 2: 确保路径检查正确，且导入的对象是 ImageMetadata
  if (images[src]) {
    // 导入的对象是 { default: ImageMetadata }
    imageMetadata = images[src] as ImageMetadata;
    isValidPath = true;

    // 自动获取图片的实际宽高（如果卡片组件没有传入）
    width = width || imageMetadata.width;
    height = height || imageMetadata.height;
  }

  if (!isValidPath) {
    console.warn(`\x1b[33mWarning: Local image not found - ${src}.\x1b[0m Please verify the path and file type.`);
  }
}
// --- 【结束本地图片修复区域】 ---
---

{
  isRemote && (
    <img
      src={src}
      alt={alt}
      // 保持 width/height 为 undefined 或 auto，以支持自适应，除非明确传入
      loading={loading}
      decoding={decoding}
      class={className} 
      style={style}
    />
  )
}

{
  !isRemote && isValidPath && imageMetadata && (
    <Image
      src={imageMetadata}
      alt={alt}
      // 确保 width 和 height 存在，否则 Astro 可能会报错
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      class={className}
      format={format}
      style={style}
    />
  )
}
