---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string; // 本地路径 (/public/images/...) 或远程 URL (http://...)
  alt: string;
  width?: number; 
  height?: number; 
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
}

let { src, alt, width, height, loading, decoding, class: className, format, style } = Astro.props;

// 检查是否为远程图片
const isRemote = src.startsWith('http://') || src.startsWith('https://');

let isValidPath = false;
let imageMetadata: ImageMetadata | undefined;

// --- 本地图片处理 ---
if (!isRemote) {
  // 使用 glob 导入 public/images 下的所有图片元数据
  const images = import.meta.glob<ImageMetadata>("/public/images/**/*.{jpeg,jpg,png,gif,svg,webp}", { 
    eager: true 
  });
  
  // 检查传入的 src 是否存在于 glob 结果中
  if (images[src]) {
    imageMetadata = images[src] as ImageMetadata;
    isValidPath = true;

    // 自动获取图片的实际宽高（用于 Astro <Image> 组件优化）
    width = width || imageMetadata.width;
    height = height || imageMetadata.height;
  }

  if (!isValidPath) {
    console.warn(`\x1b[33mWarning: Local image not found - ${src}.\x1b[0m Please verify the path and file type.`);
  }
}
---

{
  isRemote && (
    <img
      src={src}
      alt={alt}
      loading={loading}
      decoding={decoding}
      class={className} 
      style={style}
    />
  )
}

{
  !isRemote && isValidPath && imageMetadata && (
    <Image
      src={imageMetadata}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      class={className}
      format={format}
      style={style}
    />
  )
}
