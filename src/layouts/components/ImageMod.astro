---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
}

// Destructuring Astro.props to get the component's props
let { src, alt, width, height, loading, decoding, class: className, format, style } = Astro.props;

// 判断是否为远程图片
const isRemoteImage = src.startsWith('http') || src.startsWith('//');

// 对于本地图片，需要从 public 目录加载
let imageModule = null;
if (!isRemoteImage) {
  try {
    // 移除开头的 / 并构建正确的导入路径
    const imagePath = src.startsWith('/') ? src.slice(1) : src;
    // 动态导入图片
    imageModule = await import(`/public/${imagePath}`);
  } catch (error) {
    console.error(`\x1b[31mImage not found - ${src}.\x1b[0m Make sure the image is in the /public folder.`);
  }
}

const isValidPath = isRemoteImage ? true : imageModule !== null;
---

{
  isValidPath ? (
    isRemoteImage ? (
      <!-- 远程图片直接使用 img 标签 -->
      <img
        src={src}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        decoding={decoding}
        class={className}
        style={style}
      />
    ) : (
      <!-- 本地图片使用 Astro Image 组件 -->
      <Image
        src={imageModule.default}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        decoding={decoding}
        class={className}
        format={format}
        style={style}
      />
    )
  ) : null
}