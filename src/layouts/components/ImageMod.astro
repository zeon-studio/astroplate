---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt?: string;
  width?: number; 
  height?: number; 
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
  [key: string]: any;
}

let {
  src,
  alt,
  width,
  height,
  loading,
  decoding,
  format,
  style,
  class: className,
  ...rest
} = Astro.props;

const isRemoteImage = src.startsWith("http://") || src.startsWith("https://") || src.startsWith("//");

let imageModule = null;

if (!isRemoteImage) {
  const images = import.meta.glob([
    "/public/images/**/*.{jpeg,jpg,png,avif,tiff,gif,webp,svg}",
    "/public/**/*.{jpeg,jpg,png,avif,tiff,gif,webp,svg}",
  ]);

  let searchPath = src;
  if (!searchPath.startsWith('/')) {
    searchPath = `/${searchPath}`;
  }
  if (!searchPath.startsWith('/public/')) {
    searchPath = `/public${searchPath}`;
  }

  const key = Object.keys(images).find((k) => k.includes(searchPath));
  
  if (key) {
    imageModule = await images[key]();
    imageModule = imageModule.default;
  }
}

const isValidPath = isRemoteImage ? true : imageModule !== null;

// ğŸŒŸ æ ¸å¿ƒæ£€æŸ¥ï¼šå¦‚æœ className åŒ…å«ä»»ä½•æ§åˆ¶å®½é«˜çš„ CSSï¼Œæˆ‘ä»¬è®¤ä¸ºå®ƒæ˜¯è‡ªé€‚åº”å›¾ç‰‡
const isContained = className && (className.includes('object-cover') || className.includes('w-full') || className.includes('h-full'));

// ğŸŒŸ æ ¸å¿ƒä¿®å¤ï¼šåªæœ‰å½“å›¾ç‰‡ä¸æ˜¯è‡ªé€‚åº”å®¹å™¨çš„ä¸€éƒ¨åˆ†æ—¶ï¼Œæ‰ä¼ é€’å°ºå¯¸
// å¯¹äº Astro Image (<Image>), å¦‚æœæˆ‘ä»¬ä¸æƒ³è®©å®ƒå›ºå®šå°ºå¯¸ï¼Œwidth/height å¿…é¡»æ˜¯ undefined
const passWidth = isContained ? undefined : width;
const passHeight = isContained ? undefined : height;

// æœ€ç»ˆä¿é™©ï¼šå¦‚æœä¼ å…¥çš„ width/height æ˜¯ 0 æˆ– nullï¼Œä¹Ÿè®¾ä¸º undefined
const finalPassWidth = (typeof passWidth === 'number' && passWidth > 0) ? passWidth : undefined;
const finalPassHeight = (typeof passHeight === 'number' && passHeight > 0) ? passHeight : undefined;
---

{
  isValidPath ? (
    isRemoteImage ? (
      <img
        src={src}
        alt={alt || ""}
        width={finalPassWidth}
        height={finalPassHeight}
        loading={loading}
        decoding={decoding}
        class={className}
        style={style}
        {...rest}
      />
    ) : (
      <Image
        src={imageModule}
        alt={alt || ""}
        width={finalPassWidth}
        height={finalPassHeight}
        loading={loading}
        decoding={decoding}
        format={format}
        class={className}
        style={style}
        {...rest}
      />
    )
  ) : (
    <div class={`bg-gray-200 dark:bg-gray-700 flex items-center justify-center ${className}`} style={style}>
      <span class="text-gray-500 text-sm">å›¾ç‰‡åŠ è½½å¤±è´¥</span>
    </div>
  )
}
