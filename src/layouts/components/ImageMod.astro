---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
}

// Destructuring Astro.props to get the component's props
let { src, alt, width, height, loading, decoding, class: className, format, style } = Astro.props;

// 修复：移除自动添加 /public 前缀的逻辑
// src = `/public${src}`;  // 删除这行

// 判断是否为远程图片
const isRemoteImage = src.startsWith('http') || src.startsWith('//');

// Glob pattern to load images from the /public/images folder
const images = import.meta.glob("/public/images/**/*.{jpeg,jpg,png,gif,svg}");

// 对于本地图片，构建正确的路径
const localImagePath = `/public${src}`;

// Check if the source path is valid (仅对本地图片检查)
const isValidPath = isRemoteImage ? true : images[localImagePath] ? true : false;

// Log a warning message in red if the image is not found
!isValidPath && !isRemoteImage &&
  console.error(`\x1b[31mImage not found - ${src}.\x1b[0m Make sure the image is in the /public/images folder.`);
---

{
  isValidPath ? (
    isRemoteImage ? (
      <!-- 远程图片直接使用 img 标签 -->
      <img
        src={src}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        decoding={decoding}
        class={className}
        style={style}
      />
    ) : (
      <!-- 本地图片使用 Astro Image 组件 -->
      <Image
        src={images[localImagePath]() as Promise<{ default: ImageMetadata }>}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        decoding={decoding}
        class={className}
        format={format}
        style={style}
      />
    )
  ) : null
}