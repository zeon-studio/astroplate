import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.js"; 
import { sortByDate } from "@/lib/utils/sortFunctions";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/layouts/partials/PostSidebar.astro";

const BLOG_FOLDER = "blog";

// è·å–åšå®¢ç´¢å¼•é¡µé¢çš„å…ƒæ•°æ®
const postIndex = await getListPage(BLOG_FOLDER, "-index");
if (postIndex.data.draft) {
