---
import BlogCard from "@/components/BlogCard.astro";
import Pagination from "@/components/Pagination.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.js"; 
import { sortByDate } from "@/lib/utils/sortFunctions";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/layouts/partials/PostSidebar.astro";

const BLOG_FOLDER = "blog";

// è·å–åšå®¢ç´¢å¼•é¡µé¢çš„å…ƒæ•°æ®
const postIndex = await getListPage(BLOG_FOLDER, "-index");
if (postIndex.data.draft) {
  return Astro.redirect("/404");
}

// è·å–æ‰€æœ‰åšå®¢æ–‡ç« 
const posts = await getSinglePage(BLOG_FOLDER);

// ğŸš€ ä¿®å¤ï¼šä½¿ç”¨ "category" è€Œä¸æ˜¯ "categories"
const allCategories = await getAllTaxonomy(BLOG_FOLDER, "category");
const category = await getTaxonomy(BLOG_FOLDER, "category"); // ğŸš€ ä¿®å¤ï¼šå˜é‡åæ”¹ä¸º category
const tags = await getTaxonomy(BLOG_FOLDER, "tags");

// æ’åºå’Œåˆ†é¡µé€»è¾‘
const sortedPosts = sortByDate(posts);
const totalPages: number = Math.ceil(posts.length / config.settings.pagination);
const currentPosts = sortedPosts.slice(0, config.settings.pagination);

---

<Base
  title={postIndex.data.title}
  meta_title={postIndex.data.meta_title}
  image={postIndex.data.image}
  description={postIndex.data.description}
>
  <PageHeader title={postIndex?.data.title} />
  <section class="section">
    <div class="container">
      <div class="row gx-5">
        <div class="lg:col-8">
          <div class="row">
            {
              currentPosts.map((post) => (
                <div class="mb-14 md:col-6">
                  <BlogCard data={post} />
                </div>
              ))
            }
          </div>
          <Pagination
            section={BLOG_FOLDER}
            currentPage={1}
            totalPages={totalPages}
          />
        </div>

        {/* ğŸš€ ä¿®å¤ï¼šä¼ é€’æ­£ç¡®çš„ props åç§° */}
        <PostSidebar
          tags={tags}
          category={category}           {/* æ”¹ä¸º category */}
          allCategories={allCategories} {/* æ”¹ä¸º allCategories */}
        />
      </div>
    </div>
  </section>
</Base>
