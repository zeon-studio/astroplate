  return Astro.redirect("/404");
}

// è·å–æ‰€æœ‰åšå®¢æ–‡ç« 
const posts = await getSinglePage(BLOG_FOLDER);

// è·å–åˆ†ç±»å’Œæ ‡ç­¾ï¼ˆä½¿ç”¨ä¿®å¤åçš„ taxonomyParser.jsï¼‰
const allCategories = await getAllTaxonomy(BLOG_FOLDER, "categories");
